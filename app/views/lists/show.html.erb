<div class="show-banner">
  <h2><strong><%= @list.name %></strong></h2>
</div>
<%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn-new-movie"%>
<%= link_to "Back to Home", lists_path %>
<div class="card-movie">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-images">
      <img src="https://picsum.photos/300/300"/>
      <div>
        <h2><%= Movie.find(bookmark.movie_id).title %></h2>
        <p><%= bookmark.comment %></p>
        <%= Movie.find(bookmark.movie_id).rating.round(1)%>
        <%= link_to "Delete", bookmark_path(bookmark), method: :delete,
        data: { confirm: "Are you sure?"} %>
      </div>
    </div>
  <% end %>
</div>
